{
    "name": "@slimio/sqlite-transaction",
    "version": "0.1.0",
    "description": "SQLite transaction manager for SlimIO events addon",
    "main": "index.js",
    "scripts": {
        "prepublishOnly": "pkg-ok",
        "test": "cross-env psp && node test/test.js",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "nyc npm test",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/sqlite-transaction.git"
    },
    "keywords": [
        "SlimIO",
        "sqlite",
        "transaction",
        "manager",
        "handler"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/sqlite-transaction/issues"
    },
    "homepage": "https://github.com/SlimIO/sqlite-transaction#readme",
    "dependencies": {
        "@slimio/timer": "^1.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^3.0.2",
        "@slimio/is": "^1.5.1",
        "@slimio/psp": "^0.5.2",
        "@types/node": "^12.0.3",
        "cross-env": "^5.2.0",
        "eslint": "^5.16.0",
        "husky": "^2.4.1",
        "japa": "^2.0.10",
        "jsdoc": "^3.6.2",
        "pkg-ok": "^2.3.1",
        "sqlite": "^3.0.3"
    },
    "engines": {
        "node": ">=10"
    },
    "husky": {
        "hooks": {
            "pre-push": "cross-env eslint index.js && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
